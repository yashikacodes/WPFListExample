<Window x:Class="wk6_WPFListExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wk6_WPFListExample"
        mc:Ignorable="d"
        Title="Employee" Height="450" Width="800">
    <Grid x:Name="txt_id" Background="#FFFCB9B9">
        <ListBox x:Name="empListBox" Margin="0,0,656,293" SelectionChanged="empListBox_SelectionChanged" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Button x:Name="btn_list" Content="Button" HorizontalAlignment="Left" Margin="291,55,0,0" VerticalAlignment="Top" Height="38" Width="64" Click="Button_Click"/>
        <TextBox x:Name="txt_id1" HorizontalAlignment="Left" Margin="283,166,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txt_name" HorizontalAlignment="Left" Margin="291,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txt_salary" HorizontalAlignment="Left" Margin="291,271,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Id" HorizontalAlignment="Left" Margin="221,158,0,0" VerticalAlignment="Top"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="221,217,0,0" VerticalAlignment="Top"/>
        <Label Content="Salary" HorizontalAlignment="Left" Margin="221,271,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn_add" Content="Add Employee" HorizontalAlignment="Left" Margin="513,74,0,0" VerticalAlignment="Top" Height="50" Width="144" Click="btn_add_Click"/>
        <Button x:Name="btn_delete" Content="Delete Employee" HorizontalAlignment="Left" Margin="542,175,0,0" VerticalAlignment="Top" Height="42" Width="115" Click="btn_delete_Click"/>


    </Grid>
</Window>
